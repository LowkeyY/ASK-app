@PrefixCls: page-content;

:global {
	.@{PrefixCls}{
	  	//background-color: #fff;
		padding: 10px 20px 20px 20px;
		line-height:1.5em;
    word-break:break-all;
		& *{
			max-width : 100%;
		}
		& p{
			margin : 0;
			padding: 0;
		}
    & figure{
      margin: 0 !important;
      line-height: 0 !important;
    }
	}
	.@{PrefixCls}.normal{
		& *{
			font-size: 36px !important;
      line-height: 2em ;
		}
	}
  .@{PrefixCls}.small{
    & *{
      line-height:2em;
      font-size: 32px !important;
    }
    & p{
      //padding: 15px 0 0;
    }
  }
  .@{PrefixCls}.min{
    & *{
      line-height:2em;
      font-size: 24px !important;
    }
    & p{
      padding:20px 0 0;
    }
  }
	.@{PrefixCls}.max{
		& *{
			line-height:2em;
			font-size: 60px !important;
		}
		& p{
      line-height: 2em;
			//padding: 40px 0 0;
		}
	}
	.@{PrefixCls}.large{
		& *{
			line-height:2em;
			font-size: 48px !important;
		}
		& p{
			//padding: 30px 0 0;
		}
	}
}
