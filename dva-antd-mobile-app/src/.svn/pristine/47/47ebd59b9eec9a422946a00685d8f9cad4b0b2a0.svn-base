@PrefixCls: pagecontent;
@navbar-height: 90px;
@bgColor : white;
@Discuss:discuss;
.@{PrefixCls}-header {
	position: fixed;
	z-index: 100;
	top: 0;
	width : 100%;
	height: @navbar-height;
}

.@{PrefixCls}-normal {
	margin-top : @navbar-height + 10;
}

.@{PrefixCls}-title{
	font-size: .36rem;
    padding: .3rem;
    background-color: @bgColor;
}

.@{PrefixCls}-page{
	font-size: .3rem;
	padding: .3rem;
    background-color: @bgColor;
    & p{
    	line-height: .5rem;
    }
}

.@{PrefixCls}-props{
	font-size: .25rem;
    padding: .3rem;
    background-color: @bgColor;
    & ul {
		width: 98%;
		margin: 0 auto;
		padding : 0;
		text-align: center;
    	& li{
    		width: 48%;
    		height: 50px;
		    line-height: 50px;
			border-top: 5px solid #aba6a6;
			border-left: 5px solid #aba6a6;
		    float: left;
		    list-style: none;
		    color : #aba6a6;
    	}
    	&:after{
			clear: both;
			content: '.';
			display:block;
			width: 0;
			height: 0;
			visibility:hidden;
		}
    }
    &-last-prop , &-last-value{

    	border-bottom: 5px solid #aba6a6;
    }
    &-last-value , &-value{
    	color : #000 !important;
    	border-right: 5px solid #aba6a6;
    }
}

.@{PrefixCls}-comment{
	font-size: .3rem;
    padding: .3rem;
    background-color: @bgColor;
    color: #c7c7c6;
}

.@{Discuss}-content{
  font-size: 30px;
  color: #333;
  text-indent:2em;
  margin: 5px;
}
.@{Discuss}-person{
  color: #0c73c2;
  font-size: 32px;
}
.@{Discuss}-time{
  color: #999;
  font-size: 26px;
  float: right;
}


.@{PrefixCls}-water-mark{
  position: fixed;
  top:0;
  bottom: 0;
  left:0;
  right:0;
  margin: auto auto;
  width:350px;
  height:75px;
  z-index: 0;
}
.@{PrefixCls}-water-mark-img{
 width: 100%;
 opacity: .4;
  margin-bottom: 80px;
}
