
@PrefixCls:inputfoot;
.@{PrefixCls}-input-box{
  width: 100%;
  background: #fff;
  position: fixed;
  left:0;
  bottom: 0;
  box-shadow: 0 -5px 10px #ddd;
  z-index: 3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.@{PrefixCls}-input{
  margin: 20px 0 20px 20px;
  border: 2px solid #ddd;
  width: 50%;
  height:46px;
  border-radius: 30px;
  padding-left:80px;
  background:url("../../themes/images/sendbtn.png") no-repeat 20px center #f5f5f9;
  background-size: 40px 40px;
}

.@{PrefixCls}-info{
  padding: 20px 20px;
  color:#0c73c2;
  &-info-discuss{
    width:40%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }
}
