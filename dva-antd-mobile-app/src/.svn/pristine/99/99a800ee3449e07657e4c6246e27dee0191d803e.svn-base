import React from 'react';
import {Icon, Carousel} from 'antd-mobile';
import {getLocalIcon} from 'utils'
import styles from '../index.less'
import EmojiBox from 'components/emoji/index'

class MediaControls extends React.Component {
  constructor() {
    super()
    this.state = {
      isShowEmojiBox: false
    }
  }

  toggleEmojiBox() {
    this.setState({
      isShowEmojiBox: !this.state.isShowEmojiBox
    })
  }

  render() {
    return (
      <div className={styles['RichEditor-controls-media']}>
      <span className={styles['RichEditor-controls-media-img-box']}>
        <input type="file" accept="image/*" multiple=""
               onChange={this.props.handleFileInput}
        /><Icon type={getLocalIcon('/editor/sendimg.svg')} size="xxs"/></span>
        <span className={styles['RichEditor-controls-media-camera-box']}><input   onChange={this.props.handleFileInput} type="file" accept="image/*" capture='camera'
                                                                          multiple=""/> <Icon
          type={getLocalIcon('/editor/camera.svg')} size="xxs"/></span>
        <span className={styles['RichEditor-controls-media-item']} onClick={this.toggleEmojiBox.bind(this)}><EmojiBox
          isShowEmojiBox={this.state.isShowEmojiBox} insertEmoji={this.props.insertEmoji}/><Icon type={getLocalIcon('/editor/emjoy.svg')} size="xxs"/></span>
      </div>
    )
  }

}

export default MediaControls
