.dialogue-box{
  border-bottom: 1px solid #e2d8d8;
  padding: 20px;
}
.dialogue-title-box{
  display: flex;
  justify-content: flex-start;
}
.dialogue-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20px;
}
.dialogue-image{
  width: 70px;
  height:70px;
  border-radius: 50%;

}
.dialogue-content{
  margin-left: 20px;
}
.dialogue-author{
  margin: 0 0 10px 0;
  color:#0c73c2;
  font-weight: normal;
}
.dialogue-details{
  margin: 0;
  font-size: 30px;
  color: #333;
  word-break:break-all;
  p{
    padding-top: 0;
  }
}
.dialogue-btns{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top:40px;
}
.dialogue-times{
  color: #999;
  font-size: 26px;
  margin: 0;
}

.dialogue-reply-btn,.dialogue-delete-btn{
  margin-left: 20px;
  color:#0c73c2;
  font-size: 26px;
}
.dialogue-reply-box{
  background: #f2f1f1;
}

