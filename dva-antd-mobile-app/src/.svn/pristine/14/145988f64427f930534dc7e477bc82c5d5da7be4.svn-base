@import '../../themes/default.less';
@PrefixCls: bbsedit;
.@{PrefixCls}-preview-btn{
  float: right;
}
.@{PrefixCls}-send-btn-box{
  display: flex;
  align-items: center;
  padding: 0 40px;
  & span{
    margin-left: 20px;
  }
}
.@{PrefixCls}-header {
  position: fixed;
  z-index: 100;
  top: 0;
  width : 100%;
  height: @primary-header-height;
  :global{
    .am-navbar-title{
      font-size: 32px;
      color: #108ee9;
    }
  }
}
.selectmenu-box{
  & form{
    position: absolute;
    top:90px;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
  }
  :global{
    .am-list-content{
      font-size: .34rem !important;
    }
    .am-list-line{
      padding-right:.15rem;

    }
    .am-list-extra{
      color: red;
      flex-basis:60% !important;
    }

    .am-list-body{
      font-size: 0.34rem;
    }
    .am-list-item .am-list-line .am-list-extra{
      color: #000;
    }

  }
}
.my-draft-list{
  padding-left:.15rem;
}

.@{PrefixCls}-preview-btn{
  float: right;
}
.@{PrefixCls}-top{
  height: 100%;
}
