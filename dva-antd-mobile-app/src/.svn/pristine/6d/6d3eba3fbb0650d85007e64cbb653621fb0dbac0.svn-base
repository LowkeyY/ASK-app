@PrefixCls: pdfcontent;
@navbar-height: 90px;
@bgColor : white;

.@{PrefixCls}-header {
	position: fixed;
	z-index: 100;
	top: 0;
	width : 100%;
	height: @navbar-height;
  &-info{
    background: #fff;
    padding:20px 30px;
    border-top: 1px solid #ddd;
  }
}

.@{PrefixCls}-normal {
	margin-top : @navbar-height + 100;
  overflow: scroll;
}

:global {
  .ReactPDF {
    &__Document {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    &__Page {
      max-width: calc(~"100% - .2rem");
      box-shadow: 0 0 8px rgba(0, 0, 0, .5);
      margin: .1rem;

      canvas {
        width: 100%;
        height: auto !important;
      }
    }

    &__Loader, &__Error, &__NoData {
      padding: 1rem;
      color: black;
    }
  }
}

.@{PrefixCls}-silder-box{
  width: 100%;
  height:100px;
  position: fixed;
  background: #fff;
  top: @navbar-height;
  left:0;
  box-shadow: 0 5px 10px #ddd;

}
.@{PrefixCls}-font-small{
  position: absolute;
  margin: 0;
  top: 15px;
  left:35px;
  color: #888;
  z-index: 2;
}
.@{PrefixCls}-font-big{
  color: #888;
  position: absolute;
  top: 15px;
  right:35px;
  z-index: 2;
  margin: 0;
}
:global{
  .am-slider-wrapper{
    height:35px;
    .am-slider>.am-slider-rail{
      background: #888;
    }
  }

}

