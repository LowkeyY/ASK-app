@import "~themes/default";

:global {
  #nprogress {
    pointer-events: none;

    .bar {
      background: @primary-color-loadding;
      position: fixed;
      z-index: 1024;
      top: @primary-header-height;
      left: 0;
      right: 0;
      width: 100%;
      height: 3px;
    }

    .peg {
      display: block;
      position: absolute;
      right: 0;
      width: 100px;
      height: 100%;
      box-shadow: 0 0 10px @primary-color-loadding,0 0 5px @primary-color-loadding;
      opacity: 1.0;
      transform: rotate(3deg) translate(0px,-4px);
    }

    .spinner {
      display: block;
      position: fixed;
      z-index: 1031;
      top: @primary-header-height + 15;
      right: 15px;
    }

    .spinner-icon {
      width: 25px;
      height: 25px;
      box-sizing: border-box;
      border: solid 3px transparent;
      border-top-color: @primary-color-loadding;
      border-left-color: @primary-color-loadding;
      border-radius: 50%;

      :local {
        animation: nprogress-spinner 400ms linear infinite;
      }
    }
  }

  .nprogress-custom-parent {
    overflow: hidden;
    position: relative;

    #nprogress {
      .bar,
      .spinner {
        position: absolute;
      }
    }
  }
}
@keyframes nprogress-spinner {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
