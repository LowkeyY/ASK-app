@PrefixCls:Public;
@ForumList:ForumList;
@Library:Library;
@Notice:Notice;
.@{ForumList}-filter{
  width:100%;
  height:100%;
  padding: 20px 0 20px 0;
  background: #fff;
}
.@{ForumList}-list-title{
  margin-bottom: 10px;
  &>h3{
    margin: 5px 0;
    font-size: 32px;
  }
}
.@{ForumList}-list-information{
  display: flex;
  justify-content: flex-end;
  margin: 10px 0;
  color: #888;
  &>div{
    display: flex;
    align-items: center;
    margin-left: 18px;
    font-size: 30px;
  }
  &-discuss{

  }
  &-plate{

  }
  &-state{
    :global{
      .am-tag-text{
        display: flex;
        align-items: center;

        & svg{
          margin-right : .1rem;
        }
      }
    }
  }
  &-size {
    &>p{
      margin: 0;
    }
  }
}

.@{Notice}-list-title{

  &>h3{
    font-size: 30px;
    font-weight: normal;
    margin: 5px 0;
  }

}
.@{Notice}-list-information{
  display: flex;
  justify-content: flex-end;
  font-size: 26px;
  color: #888;
}
