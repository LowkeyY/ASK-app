@import '../../themes/default.less';
@PrefixCls: creates;
@bgColor : white;

.@{PrefixCls}-header {
	position: fixed;
	z-index: 100;
	top: 0;
	width : 100%;
	height: @primary-header-height;
  :global{
    .am-navbar-title{
      font-size: 32px;
      color: #108ee9;
    }
  }
}

.@{PrefixCls}-normal {
	margin-top: @primary-header-height;
	:global {
		.am-input-label , .am-textarea-label , .am-textarea-control textarea{
			font-size : .3rem;
		}
		input{
			font-size : 0.3rem !important;
		}
	}
}
.@{PrefixCls}-preview-btn{
  float: right;
}
.@{PrefixCls}-send-btn-box{
  display: flex;
  align-items: center;
  & span{
    margin-left: 10px;
  }
}
