.reply-box{
  padding: 20px;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20px;
  border-bottom: 1px solid #e2d8d8;

}
.reply-box>img {
  width:60px;
  height:60px;
  border-radius: 50%;

}
.reply-content{
  width: 100%;
  margin-left: 20px;
}
.reply-content h5{
  margin: 0 0 10px 0;
  font-weight: normal;
}
.reply-content h5 a{
  color:#0c73c2;
}
.reply-content span{
 padding: 0 10px;
}
.reply-details{
  margin: 0 0 20px 0;
  font-size: 30px;
  color: #333;
}
.reply-others{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.reply-times{
  color: #999;
  font-size: 26px;
  margin: 0;
}
.reply-btns{

}
.reply-reply-btn,.reply-delete-btn{
  color:#0c73c2;
  margin-left: 20px;
  font-size: 26px;
}



